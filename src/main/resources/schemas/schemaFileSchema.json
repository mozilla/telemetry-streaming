{
  "$schema": "http://json-schema.org/schema#",
  "title": "amplitude_configuration",
  "description": "Configuration file schema for Amplitude event integration",
  "type": "object",
  "definitions": {
    "schemaArray": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#"
      }
    },
    "nonNegativeInteger": {
      "type": "integer",
      "minimum": 0
    },
    "nonNegativeIntegerDefault0": {
      "allOf": [
        {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        {
          "default": 0
        }
      ]
    },
    "simpleTypes": {
      "enum": [
        "array",
        "boolean",
        "integer",
        "null",
        "number",
        "object",
        "string"
      ]
    },
    "stringArray": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    }
  },
  "required": [
    "source",
    "eventGroups"
  ],
  "properties": {
    "source": {
      "type": "string"
    },
    "filters": {
      "type": "object",
      "properties": {
        "sourceName": {
          "$ref": "#/definitions/stringArray"
        },
        "sourceVersion": {
          "$ref": "#/definitions/stringArray"
        },
        "docType": {
          "$ref": "#/definitions/stringArray"
        },
        "appName": {
          "$ref": "#/definitions/stringArray"
        },
        "appUpdateChannel": {
          "$ref": "#/definitions/stringArray"
        },
        "appVersion": {
          "$ref": "#/definitions/stringArray"
        },
        "appBuildId": {
          "$ref": "#/definitions/stringArray"
        },
        "os": {
          "$ref": "#/definitions/stringArray"
        },
        "experimentId": {
          "$ref": "#/definitions/stringArray"
        }
      },
      "additionalProperties": false
    },
    "eventGroups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Event group",
        "type": "object",
        "required": [
          "eventGroupName",
          "events"
        ],
        "properties": {
          "eventGroupName": {
            "type": "string"
          },
          "events": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "name",
                "schema"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "userProperties": {
                  "type": "object",
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "string",
                        "enum": [
                          "timestamp",
                          "category",
                          "object",
                          "method",
                          "value"
                        ]
                      },
                      {
                        "type": "string",
                        "pattern": "^extra"
                      },
                      {
                        "type": "string",
                        "pattern": "^literal"
                      }
                    ]
                  },
                  "uniqueItems": true
                },
                "amplitudeProperties": {
                  "type": "object",
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "string",
                        "enum": [
                          "timestamp",
                          "category",
                          "object",
                          "method",
                          "value"
                        ]
                      },
                      {
                        "type": "string",
                        "pattern": "^extra"
                      },
                      {
                        "type": "string",
                        "pattern": "^literal"
                      }
                    ]
                  },
                  "uniqueItems": true
                },
                "schema": {
                  "type": "object"
                },
                "sessionIdOffset": {
                  "type": "string"
                }
              }
            },
            "uniqueItems": true
          }
        }
      }
    }
  }
}
